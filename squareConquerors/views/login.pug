#login
  h3.text-center.text-white.pt-5 Login form
  .container
    #login-row.row.justify-content-left.align-items-left
      #login-column.col-md-6
        #login-box.col-md-12
          form#login-form.form
            h3.text-left.text-info Login
            h5.text-left.text-info It is nice to see you again!
            .form-group
              label.text-info(for='username') Username:
              br
              input#username.form-control(type='text' name='username')
            .form-group
              label.text-info(for='password') Password:
              br
              input#password.form-control(type='password' name='password' pattern='^[a-zA-Z][a-zA-Z0-9]{3,15}$' title='The password field must begin with a letter,and contain letters and numbers. It must also contain from 3 to 15 characters' required='')
            .form-group
              label#remember-me.text-info(for='remember-me')
                span Remember me
                span
                  input#remember-me(name='remember-me' type='checkbox')
              br
              input.btn.btn-info.btn-md(type='button' name='submit' value='Login' onclick='return isUserRegistered()')
            #register-link.text-left
              a.text-info(href='./register.pug') Are you a new user? Register here!
      #image-column.col-md-6
        img(src='/images/square-conquerors-logo.png' alt='logo' width='600' height='600')
